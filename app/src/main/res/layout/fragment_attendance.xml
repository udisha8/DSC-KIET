<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EFEFF2"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AttendanceFragment">

        <RelativeLayout
            android:id="@+id/layout_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="34sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_subject"
                android:layout_width="130dp"
                android:layout_height="4dp"
                android:layout_below="@id/title_subject"
                android:background="@color/colorPrimaryDark"
                android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                android:outlineSpotShadowColor="@color/colorPrimaryDark" />

            <!-- For android-->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/view_subject"
                android:layout_margin="10dp"
                android:padding="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="8dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mobile_dev" />

                    <TextView
                        android:id="@+id/text_android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:text="Android"
                        android:textSize="44sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- for web -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_web"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/card_view_android"
                android:layout_margin="10dp"
                android:padding="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="8dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_web"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Web"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="44sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_web"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/web_dev" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_ml"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/card_view_web"
                android:layout_margin="10dp"
                android:padding="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="8dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_ml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ml" />

                    <TextView
                        android:id="@+id/text_ml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:text="ML"
                        android:textSize="44sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </FrameLayout>
</ScrollView>